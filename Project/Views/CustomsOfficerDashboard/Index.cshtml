@model List<Project.Models.TruckGoodsModel>

@{
    ViewData["Title"] = "Customs Check Dashboard";
}




<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Truck Inspection List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
         <div class="row pb-3">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       Vehicle Number
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Supplier Name
                    </th>
                        <th>
                            Supplier Location
                        </th>
                        <th>
                             Quantity
                        </th>
                        <th>
                            Unit Type
                        </th>
                        <th>
                            Arrival Time
                        </th>
                        <th>
                          Actions
                        </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.VehicleNo</td>
                        <td>
                            @obj.Description
                        </td>
                            <td>
                                @obj.SupplierName
                            </td>
                            <td>
                                @obj.SupplierLocation
                            </td>
                            <td>
                                @obj.Quantity
                            </td>
                            <td>
                                @obj.Unit
                            </td>
                            <td>
                                @obj.ArrivalTime
                            </td>
                            <td>
                                @if (obj.IsCustomsApproved)
                                {
                                    <div class="w-75 align-content-center" role="group">
                                        <p>Approved</p>
                                    </div>
                                }

                                else
                                {
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="CustomsOfficerDashboard" asp-action="ApproveGoods" asp-route-id="@obj.SerialNo" class="btn btn-primary mx-2">
                                            Approve
                                        </a>
                                        <a asp-controller="CustomsOfficerDashboard" asp-action="Reject" asp-route-id="@obj.SerialNo" class="btn btn-danger mx-2 reject-btn">
                                            Reject
                                        </a>
                                    </div>
                                }
                            </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
</div>


<script>

    document.querySelectorAll('.reject-btn').forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const row = this.closest('tr');
            const url = this.href;

           
            fetch(url, {
                method: 'POST'
            }).then(response => {
                if (response.ok) {
                    row.remove(); 
                }
            });
        });
    });

</script>